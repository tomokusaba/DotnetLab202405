@page "/datetimepicker"
<FluentStack Orientation="Orientation.Vertical" VerticalGap="30" Style="padding:15px">
    <FluentLabel Typo="Typography.PageTitle">DatePicker</FluentLabel>
    <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
        <FluentLabel Typo="Typography.Subject">通常のDatePicker</FluentLabel>
        <FluentStack Orientation="Orientation.Horizontal">

            <FluentDatePicker @bind-Value="@date1" />
            <FluentTimePicker @bind-Value="@date1" />
        </FluentStack>

        <FluentLabel Typo="Typography.Body">Selected Date: @date1</FluentLabel>
    </FluentStack>
    <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
    <FluentLabel Typo="Typography.Subject">DateOnly?+TimeOnly?のDatePicker</FluentLabel>
    <FluentStack Orientation="Orientation.Horizontal">
    </FluentStack>
    </FluentStack>

</FluentStack>
@code {
    private DateTime? date1 = DateTime.Now;

    private DateOnly date2 = DateOnly.FromDateTime(DateTime.Now);
    private TimeOnly time2 = TimeOnly.FromDateTime(DateTime.Now);
    private DateOnly MyDate = DateOnly.FromDateTime(DateTime.Today);

}
