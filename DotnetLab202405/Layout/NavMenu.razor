<FluentStack Orientation="Orientation.Vertical" Style="height:100%" Width="80px">
    <FluentAppBar Style="height:100%; background-color: var(--neutral-layer-2)">
        <FluentAppBarItem Href="/"
                          Match="NavLinkMatch.All"
                          Text="Home"
                          IconRest="HomeIcon()"
                          IconActive="HomeIcon(active: true)" />
        @* <FluentAppBarItem Href="/datetimepicker"
        Match="NavLinkMatch.All"
        Text="DatePicker"
        IconRest="DateTimeIcon()"
        IconActive="DateTimeIcon(active: true)" />*@
        <FluentAppBarItem Href="/keycapture"
                          Match="NavLinkMatch.All"
                          Text="KeyCapture"
                          IconRest="KeyCodeIcon()"
                          IconActive="KeyCodeIcon(active: true)" />
        <FluentAppBarItem Href="/PullRefresh"
                          Match="NavLinkMatch.All"
                          Text="Pull To Refresh"
                          IconRest="PullToRefreshIcon()"
                          IconActive="PullToRefreshIcon(active: true)" />
        <FluentAppBarItem Href="/DataGridWidth"
                          Match="NavLinkMatch.All"
                          Text="DataGrid"
                          IconRest="DataGridWidthIcon()"
                          IconActive="DataGridWidthIcon(active: true)" />

    </FluentAppBar>
</FluentStack>


@code {
    private static Icon HomeIcon(bool active = false) =>
    active ? new Icons.Filled.Size24.Home()
    : new Icons.Regular.Size24.Home();

    private static Icon DateTimeIcon(bool active = false) =>
    active ? new Icons.Filled.Size24.CalendarDate()
    : new Icons.Regular.Size24.CalendarDate();


    private static Icon KeyCodeIcon(bool active = false) =>
    active ? new Icons.Filled.Size24.Keyboard()
    : new Icons.Regular.Size24.Keyboard();

    private static Icon DataGridWidthIcon(bool active = false) =>
    active ? new Icons.Filled.Size24.Grid()
    : new Icons.Regular.Size24.Grid();

    
    private static Icon PullToRefreshIcon(bool active = false) =>
    active ? new Icons.Filled.Size24.PhoneFooterArrowDown()
    : new Icons.Regular.Size24.PhoneFooterArrowDown();


    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
